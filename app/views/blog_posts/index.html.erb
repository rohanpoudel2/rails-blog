<h1>My Blog</h1>
<% @blog_posts.each do |blog_post| %>
  <div>
  <%= image_tag blog_post.cover_image if blog_post.cover_image.present? %>
    <h2>
      <%= link_to blog_post.title , blog_post %>
    </h2>
  <% if blog_post.draft? %>
      <div class="bg-gray-100 text-gray-900 p-2 rounded">Draft</div>
    <% elsif blog_post.scheduled? %>
      <div class="bg-blue-100 text-gray-900 p-2 rounded">Schedule</div>
    <% end %>
    <%= blog_post.content%>
  </div>
  <% end %>
<div class="my-16">
<% #console %>
  <% if @pagy.count > @pagy.items%>
    <%== pagy_nav(@pagy) %>
  <% end %>
</div>